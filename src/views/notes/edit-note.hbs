<div class="col-md-4-mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit Note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="POST">
                <input type="hidden" name="method" value="PUT">
                <div class="form-group p-2">
                    <input type="text" name="title" class="form-control" placeholder="Title" value="{{note.title}}">
                </div>
                <div class="form-group p-2">
                    <textarea name="description" class="form-control">{{note.description}}</textarea>
                </div>
                <div class="form-group p-2">
                    <button class="btn btn-primary btn-block" type="submit">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>